  "description": "Web-based multiplayer space exploration and trading game",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "http-server . -p 3000 -o -c-1",
    "server": "node server/gameServer.js",
    "dev:multiplayer": "npm run server & npm run dev",
    "build": "node scripts/build.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
